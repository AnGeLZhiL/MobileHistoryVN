<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".fragments.TestsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayoutFioReiting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/dark_beige"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fio_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/vollkorn_bold"
                    android:text="Фамилия И.О."
                    android:textSize="27sp"/>

                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/vollkorn_bold"
                    android:paddingLeft="10dp"
                    android:text="100"
                    android:textDirection="firstStrongRtl"
                    android:textSize="27sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:src="@drawable/star" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_marginVertical="10dp"
                android:textColor="@color/dark_brown"
                android:layout_gravity="center"
                android:fontFamily="@font/vollkorn_bold"
                android:text="Тесты"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/testRecView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>